<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="@dimen/dm262"
        android:layout_height="@dimen/dm246"
        android:layout_centerInParent="true"
        android:background="@mipmap/small_shexiang">
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dm178"
            android:layout_height="@dimen/dm150"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dm66"
            />
        <com.hopen.darts.views.CustomFontTextView
            android:id="@+id/tv_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Player1"
            android:textSize="@dimen/dm22"
            android:layout_marginTop="@dimen/dm30"
            android:textColor="@color/white"
            app:font_type="fzdhtjw"
            />
        <ImageView
            android:layout_width="@dimen/dm30"
            android:layout_height="@dimen/dm30"
            android:background="@mipmap/camera_small"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/dm30"
            />
    </FrameLayout>
</RelativeLayout>