<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/main_bottom_bar_bg"
        android:paddingTop="@dimen/dm10"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm174"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/direction_bt"/>
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/bottom_cancel_margin_right"
            android:background="@mipmap/btn_cancel"/>
        <ImageView
            android:id="@+id/iv_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/bottom_done_margin_right"
            android:background="@mipmap/btn_done"/>
    </FrameLayout>
</RelativeLayout>