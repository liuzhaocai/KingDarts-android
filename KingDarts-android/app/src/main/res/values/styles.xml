<resources>
    <!-- Base application theme. -->

    <!-- 应用主题 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ActionBar的颜色 -->
        <item name="colorPrimary">@color/window_bg</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/theme_color</item>
        <!-- 样式颜色 -->
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <!-- dialog style -->
    <style name="ThomasDialogTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/transparent</item>
        <!-- 样式颜色 -->
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="PlayerInGroupStyle">
        <item name="android:layout_width">166px</item>
        <item name="android:layout_height">128px</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">13.2px</item>
        <item name="android:paddingLeft">15.4px</item>
        <item name="android:paddingRight">15.4px</item>
        <item name="android:paddingTop">12px</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="common_text_view">
        <item name="font_type">fzdhtjw</item>
        <item name="stroke_color">@color/black</item>
        <item name="stroke_width">@dimen/dm2</item>
    </style>
</resources>
